{
  "manifest_version": 3,
  "name": "AutoClose Idle Tabs",
  "version": "1.2.0",
  "permissions": ["tabs", "storage", "notifications", "contextMenus", "idle"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": { "48": "icon.png" }
}
